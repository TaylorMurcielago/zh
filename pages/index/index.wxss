/**index.wxss**/
.container {
  height: 1500rpx;
  padding: 0;
  font-size: 14rpx;
  background: #F0F4F3;
  color: #000;
}

.container .search {
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #2A8CE5;
}

.container .search-left {
  -webkit-box-flex: 8;
      -ms-flex: 8;
          flex: 8;
  background: #4EA3E7;
  text-align: left;
}

.container .search-left input {
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}

.container .search .search-left image {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}

.container .search .search-right {
  -webkit-box-flex: 1;
      -ms-flex: 1;
          flex: 1;
}

.container .search .search-right image {
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.container .search-placeholder {
  color: #8CCEFD;
  line-height: 20rpx;
}

.container .location-session {
  background: #fff;
  width: 100%;
  white-space: nowrap;
  border-width: 1px 0px 1px 0px;
  border-style: solid;
  border-color: #e6e6e6;
}

.container .location-session .location {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
      -ms-flex-direction: row;
          flex-direction: row;
  padding: 0rpx 30rpx 0rpx 30rpx;
}

.container .location-session .location .label-city,
.container .location-session .location .label-Des {
  position: relative;
  font-size: 28rpx;
  -webkit-box-flex: 1;
      -ms-flex: 1;
          flex: 1;
  color: #9e9e9e;
}

.container .location-session .location .label-Des {
  text-indent: 2em;
}

.container .location-session .location .label-city::after,
.container .location-session .location .label-Des::after {
  content: " ";
  display: inline-block;
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  right: 0;
  top: 50%;
  margin-top: -6rpx;
  border-width: 2px 2px 0px 0px;
  border-style: solid;
  border-color: #9e9e9e;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
          transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}

.container .location-session .location .city {
  font-size: 28rpx;
  font-weight: 500;
  color: #32cd32;
}

.container .location-session-spacing {
  margin-bottom: 30rpx;
  padding: 20rpx 0rpx 20rpx 0rpx;
}

/*feed-item part is in app.wxss for multiplexing*/
