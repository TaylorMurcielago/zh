@charset "UTF-8";
/* pages/dome/dome.wxss */
.wrapper {
  height: 100vh;
}

/* 关闭滚动条  */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.list-search {
  position: absolute;
  top: 0;
  left: 0;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  width: 100%;
  height: 90rpx;
  padding: 10rpx 30rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  z-index: 20;
  background: #FFF;
}

.search-title {
  -ms-flex-negative: 0;
      flex-shrink: 0;
  font-size: 28rpx;
  padding-right: 10rpx;
}

.list-search-box {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  padding: 0 30rpx;
  width: 100%;
  height: 70rpx;
  background: #f5f5f5;
  border-radius: 90rpx;
  font-size: 28rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}

.list-search-box input {
  width: 100%;
  padding-left: 10rpx;
}

.search-button {
  /* width: 100rpx; */
  -ms-flex-negative: 0;
      flex-shrink: 0;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
}
